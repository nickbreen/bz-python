load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "src",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "openssl",
    args = ["-j"],
    configure_command = "config",
    configure_in_place = True,
    lib_source = ":src",
    out_binaries = ["openssl"],
    out_shared_libs = [
        "libssl.so.1.1",
        "libcrypto.so.1.1",
    ],
    includes = [
        "include"
    ],
    targets = [
        "",
        #"test",  # requires Test::Harness perl module
        "install",
    ],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "openssl11",
    srcs = [":openssl"],
    output_group = "openssl",
    visibility = ["//visibility:public"],
)
